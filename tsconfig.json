{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["ES2022", "dom"],
    "sourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "acceptance-tests",
    "coverage",
    "webpack",
    "jest",
    "data",
    "**/*.spec.ts",
    "browser",
    "browser-build.config.js",
    "vite.config.ts",
    "vitest.config.ts"
  ]
}
